@model AvlZen.Models.PlacesModel
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
@*<h3>@ViewBag.Message</h3>*@

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 bgTan divBdr">
            <p class="myListHeader">For questions, suggestions and corrections regarding the AVL Zen site:</p>
            <address>
                <strong>Contact:</strong>   <a href="mailto:postmaster@avlzen.com">postmaster@avlzen.com</a><br />
            </address>
        </div>
        <div class="col-md-5 col-md-offset-4 bgTan divBdr">
            @*<div class="myTitle">Yoga Studios</div>*@
            @*<div class="bgTan divBdr">*@
                <p class="myListHeader">For details and last-minute information about studios:</p>
                @if (Model.Places != null)
{
    <div class="table-responsive table-scrollable">
        <table class="table table-striped table-condensed table-responsive">
            <tr>
                <th>Studio</th>
                <th>AVL Zen Code</th>
            </tr>
            @foreach (var p in Model.Places.OrderBy(p => p.Name))
            {
                <tr>
                    <td><a href="@p.Link" target="_blank">@p.Name</a></td>
                    <td>@p.Code</td>
                </tr>
            }
        </table>
    </div>
                    <p>@(Model.Places.Count()) studios.</p>
                }
                else
                {
                    <div>no Model.Classes</div>
                }
            @*</div>*@
        </div>
    </div>
</div>
